<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="0px">
    
    	<!-- Left button with arrow -->
    	<ImageButton android:id="@+id/button_left_arrow" 
    		style="?android:attr/buttonStyleSmall"
    		android:layout_width="0dip" 
    		android:layout_height="wrap_content"
    		android:layout_weight="1" 
    		android:src="@drawable/arrow_left"
    	/>
    			<!-- EditText with task's name -->
    			<EditText
        			android:id="@+id/name_field"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_weight="4" 
        			android:text="Panucchi"
        		/>
    	<!-- Right button with arrow -->
    	<ImageButton android:id="@+id/button_Right_arrow" 
    		style="?android:attr/buttonStyleSmall"
    		android:layout_width="0dip"
    		android:layout_height="wrap_content"
    		android:layout_weight="1" 
    		android:src="@drawable/arrow_right"
    	/>
    </LinearLayout>


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="0px">
    	
    	<!-- Left button with arrow -->
    		<Button android:id="@+id/button_here" 
    			android:layout_width="0dip"
    			android:layout_height="wrap_content"
    			android:layout_weight="1"
    			android:text="@string/here"/>
    	
    	<!-- EditText with task's name -->
    		
    		<EditText
        		android:id="@+id/x_field"
        		android:layout_width="0dip"
        		android:layout_height="wrap_content"
        		android:layout_weight="3"
        		android:text="56' 45' 43'"/>
        		
             <EditText
        		android:id="@+id/y_field"
        		android:layout_width="0dip"
        		android:layout_height="wrap_content"
        		android:layout_weight="3"
        		android:text="51' 43' 62'"/>
    	
        <!-- Right button with arrow -->
    		<ImageButton android:id="@+id/button_gmaps" 
    			android:layout_width="0dip"
    			android:layout_height="wrap_content"
    			android:layout_weight="1"
    			android:src="@drawable/gmaps"/>
</LinearLayout>
	
	
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="0px">
    	
    	<ImageView
        		android:id="@+id/category_image"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:src="@drawable/pizza"/>
        
        <Spinner 
        		android:id="@+id/spinner"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:drawSelectorOnTop="true"
   		 />	
</LinearLayout>
 

<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="0px">

        
        <TextView
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content"
    		android:text="@string/radius"
    	/>
    	
    	<LinearLayout
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="0px">
	    
		    	<ImageButton android:id="@+id/button_left_arrow" 
		    		style="?android:attr/buttonStyleSmall"
		    		android:layout_width="0px" 
		    		android:layout_height="wrap_content"
		    		android:layout_weight="1" 
		    		android:src="@drawable/arrow_left"
		    	/>
		    			
		    			<EditText
		        			android:id="@+id/radius_field"
		        			android:layout_width="wrap_content"
		        			android:layout_height="wrap_content"
		        			android:layout_weight="2" 
		        			android:text="300"
		        		/>
		
		    	<ImageButton android:id="@+id/button_Right_arrow" 
		    		style="?android:attr/buttonStyleSmall"
		    		android:layout_width="0px"
		    		android:layout_height="wrap_content"
		    		android:layout_weight="1" 
		    		android:src="@drawable/arrow_right"
		    	/>
    	</LinearLayout>
    	
    	<TextView
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="@string/meters"/>
    </LinearLayout>

	<TextView
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="@string/comments"/>
        		
    <EditText
        		android:id="@+id/comments_field"
        		android:layout_width="fill_parent"
        		android:layout_height="fill_parent"
        		android:text="comments are here"/>

 
</LinearLayout>
